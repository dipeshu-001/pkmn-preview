{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "removeComments": false,
        "alwaysStrict": true,
        "pretty": true,
        "target": "ES2020",
        "lib": ["ESNext"],
        "sourceMap": true,
        "declaration": true,
        "inlineSources": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceRoot": "./src",
        "outDir": "./dist",       
        "baseUrl": "./",
        "typeRoots": ["node_modules/@types", "src/@types"]
    }
}